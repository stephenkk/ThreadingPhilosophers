

public class Philosopher extends Thread{
	private int philNumber;
	private String name;
	private boolean eating;
	private boolean hungry;
	private boolean thinking;
	
	
	public Philosopher(int philNumber, String name) {
		this.philNumber=0;
		this.name = name;
		this.eating = false;
		this.hungry = false;
		this.thinking = false;
		
	}
	public void run() { // the run method will start the philospher eating if the conditions are correct 
		
		}
	
		
	public static void main(String[] args) {
		
		//Philosopher objects
				Philosopher p0 = new Philosopher(0,"Confucius");
				Philosopher p1 = new Philosopher(1, "Socrates");
				Philosopher p2 = new Philosopher(2, "Plato");
				Philosopher p3 = new Philosopher(3, "Descartes");
				Philosopher p4 = new Philosopher(4, "Sartre");
	
		//Philosopher array
		Philosopher[] WiseTable = {p0, p1, p2, p3, p4};
		
		p0.start();		//each objects starts the run()
		p1.start();
		p2.start();
		p3.start();
		p4.start();
		
		
		
		
		
	
	}
	
	public void eat() {
		int philNbr = this.philNumber;
		
		long startTime = System.currentTimeMillis();
	    while((System.currentTimeMillis()-startTime)<Math.random()*100); 
		
	}

}
