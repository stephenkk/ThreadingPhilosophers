
public class Philosopher extends Thread{
	private String name;
	int chopsticks = 5;
	boolean hungry;
	
	
	public Philosopher(String name) {
		this.name = name;
		this.hungry = true;
		
		
	}
	public void run() { // the run method shows who is eating.
		
		
		if (chopsticks > 2) {
			chopsticks = chopsticks -2;
		System.out.println( name + " is eating...");
		
		long startTime = System.currentTimeMillis();
	    while((System.currentTimeMillis()-startTime)<Math.random()*100) {
		hungry = true;
		
		}
	    hungry = false;
	    System.out.println( name + " is full and stopped eating");
	    
	    
	    
		}
	}
	public static void main(String[] args) {
	int chopsticks = 5;

	
	Philosopher p0 = new Philosopher("Confucius");
	Philosopher p1 = new Philosopher("Socrates");
	Philosopher p2 = new Philosopher("Plato");
	Philosopher p3 = new Philosopher("Descartes");
	Philosopher p4 = new Philosopher("Sartre");
	
	p0.start();
	p1.start();
	p2.start();
	p3.start();
	p4.start();
	}
}

