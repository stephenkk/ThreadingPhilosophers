
public class Philosopher extends Thread{
	private String name;
	private boolean eating;
	private boolean hungry;
	private boolean thinking;
	
	
	public Philosopher(String name) {
		this.name = name;
		this.eating = false;
		this.hungry = false;
		this.thinking = false;
		
	}
	public void run() { // the run method will start the philospher eating if the conditions are correct 
		
		if this.eating == false
		this.eating = true
		
		
		long startTime = System.currentTimeMillis();
	    while((System.currentTimeMillis()-startTime)<Math.random()*10) {
		System.out.println( name + " is eating");
		}
		this.thinking = true;
	    System.out.println( this.name + " is thinking"
	    run();
		}
	
	public static void main(String[] args) {
		

	//Philosopher objects
	Philosopher p0 = new Philosopher("Confucius");
	Philosopher p1 = new Philosopher("Socrates");
	Philosopher p2 = new Philosopher("Plato");
	Philosopher p3 = new Philosopher("Descartes");
	Philosopher p4 = new Philosopher("Sartre");
	
	//Philosopher array
	Philosopher[] WiseTable = {p0, p1, p2, p3, p4};
	
	p0.start();		//each objects starts the run()
	p1.start();
	p2.start();
	p3.start();
	p4.start();
	}
}
